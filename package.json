{
    "name": "GPMS",
    "version": "1.0.5",
    "private": true,
    "dependencies": {
        "@chakra-ui/react": "^2.3.5",
        "@cyntler/react-doc-viewer": "^1.8.0",
        "@electron/remote": "^2.0.8",
        "@emotion/react": "^11.10.4",
        "@emotion/styled": "^11.10.4",
        "@reduxjs/toolkit": "^1.8.6",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.4.3",
        "axios": "^1.1.3",
        "chart.js": "3.9.1",
        "electron-is-dev": "^2.0.0",
        "electron-updater": "^6.1.1",
        "form-data": "^4.0.0",
        "formik": "^2.2.9",
        "framer-motion": "^10.12.22",
        "js-cookie": "^3.0.1",
        "moment-timezone": "^0.5.39",
        "react": "^18.2.0",
        "react-chartjs-2": "4.3.1",
        "react-color": "^2.19.3",
        "react-csv": "^2.2.2",
        "react-detect-offline": "^2.4.5",
        "react-doc-viewer": "^0.1.5",
        "react-dom": "^18.2.0",
        "react-hot-toast": "^2.4.1",
        "react-icons": "^4.6.0",
        "react-loader-spinner": "^5.3.4",
        "react-phone-input-2": "^2.15.1",
        "react-redux": "^8.0.4",
        "react-router-dom": "^6.4.2",
        "react-scripts": "^5.0.1",
        "redux": "^4.2.0",
        "socket.io-client": "^4.5.3",
        "styled-components": "^6.0.4",
        "web-vitals": "^3.4.0",
        "xlsx": "^0.18.5",
        "yup": "^1.2.0"
    },
    "main": "public/main.js",
    "homepage": "./",
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron:serve": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
        "electron:build": "yarn build && electron-builder -c.extraMetadata.main=build/main.js",
        "electron:start": "wait-on tcp:127.0.0.1:3000 && electron ."
    },
    "build": {
        "generateUpdatesFilesForAllChannels": true,
        "extends": null,
        "appId": "com.jkimbareeba.chuss",
        "compression": "maximum",
        "productName": "GPMS",
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "./build/chuss512.ico"
        },
        "nsis": {
            "oneClick": false,
            "installerIcon": "./build/chuss512.ico",
            "uninstallerIcon": "./build/chuss512.ico",
            "uninstallDisplayName": "chuss-uninstall",
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "category": "public.app-category.education",
            "target": "dmg",
            "icon": "./build/chuss256.icns"
        },
        "files": [],
        "directories": {
            "buildResources": "assets"
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "concurrently": "^8.2.0",
        "cross-env": "^7.0.3",
        "electron": "^25.3.0",
        "electron-builder": "^24.4.0",
        "wait-on": "^7.0.1"
    },
    "author": "Joshua Kimbareeba",
    "repository": "https://github.com/joshbaz/CHUSS-SA.git",
    "publish": {
        "provider": "github",
        "releaseType": "release"
    },
    "license": "MIT"
}
